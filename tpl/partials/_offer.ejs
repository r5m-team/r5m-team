<section class="offer clearfix">
  <div class="offer__shadow"></div>
  <div class="flexible-container">
    <div class="offer__container-wrapper">
      <div class="offer__container clearfix">
        <div class="offer__picture-wrapper">
          <img class="offer__picture" src="./images/get_consultation.jpg" alt="Узнайте стоимость сайта">
        </div>
        <div class="offer__feedback-wrapper">
          <div class="offer__feedback">
            <h2 class="section-header offer__title">
              Получите <span class="offer__title__wow">бесплатную консультацию</span> <br/>и расчет стоимости сайта
            </h2>
            <%# <h3 class="offer__subtitle">
              и получите ...
            </h3>%>
            <div class="r5mFeedback offer__feedback__form clearfix">
              <form action="/feedback" class="r5mFeedback__form">
                <div class="clearfix">
                  <label class="r5mFeedback__label r5mFeedback__label_contacts r5mFeedback__label_onpage">
                    <span class="r5mFeedback__placeholder">Введите Ваше имя*</span>
                    <input class="r5mFeedback__input r5mFeedback__input_onpage" name="name" required type="text" />
                  </label>
                  <%# <label class="r5mFeedback__label">
                    <span class="r5mFeedback__placeholder">Телефон*</span>
                    <input class="r5mFeedback__input" name="phone" required type="text" />
                  </label>%>
                  <label class="r5mFeedback__label r5mFeedback__label_contacts r5mFeedback__label_onpage last">
                    <span class="r5mFeedback__placeholder">E-mail или телефон*</span>
                    <input class="r5mFeedback__input r5mFeedback__input_onpage" name="email" type="text" required />
                  </label>
                </div>
                <label class="r5mFeedback__label r5mFeedback__label_text r5mFeedback__label_onpage">
                  <span class="r5mFeedback__placeholder">Ваши пожелания, комментарии или вопросы</span>
                  <textarea class="r5mFeedback__text r5mFeedback__text_onpage" name="text"></textarea>
                </label>
                <button class="r5mFeedback__submit-button submit-button submit-button_onpage reasons-offer__actions__order r5m-action" type="submit">
                  <!-- <i class="fa fa-check"></i>  -->
                  Узнать стоимость
                </button>                
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
